                                                 Width="190"
                                                 Height="16"
                                                 Margin="380,5,0,0"
                                                 HorizontalAlignment="Left"
                                                 VerticalAlignment="Top"
                                                 Click="rbPCLMethodOverlay_Click"
                                                 Content="Overlay (Automatic @ end page)"
                                                 GroupName="PCLMethod" />
                                </Grid>
                            </GroupBox>

                            <GroupBox Name="grpPCLMainFormData"
                                      Width="650"
                                      Height="115"
                                      Margin="5,170,0,0"
                                      HorizontalAlignment="Left"
                                      VerticalAlignment="Top"
                                      BorderThickness="3"
                                      Header="Main (or only) form:">
                                <Grid>
                                    <Label Name="lbPCLMacroSrcMain"
                                           Width="60"
                                           Height="25"
                                           Margin="5,5,0,0"
                                           HorizontalAlignment="Left"
                                           VerticalAlignment="Top"
                                           HorizontalContentAlignment="Left"
                                           Content="Source:" />
                                    <RadioButton Name="rbPCLMacroSrcMainHost"
                                                 Width="220"
                                                 Height="16"
                                                 Margin="65,10,0,0"
                                                 HorizontalAlignment="Left"
                                                 VerticalAlignment="Top"
                                                 Click="rbPCLMacroSrcMainHost_Click"
                                                 Content="Download from host workstation"
                                                 GroupName="PCLMacroSrcMain" />

                                    <RadioButton Name="rbPCLMacroSrcMainPrnDisk"
                                                 Width="220"
                                                 Height="16"
                                                 Margin="300,10,0,0"
                                                 HorizontalAlignment="Left"
                                                 VerticalAlignment="Top"
