                                              FlowDirection="LeftToRight"
                                              IsChecked="True"
                                              Unchecked="chkPCLFormRemove_Unchecked" />

                                    <CheckBox Name="chkPCLRearBPlate"
                                              Width="250"
                                              Height="20"
                                              Margin="200,25,0,0"
                                              HorizontalAlignment="Left"
                                              VerticalAlignment="Top"
                                              HorizontalContentAlignment="Left"
                                              Checked="chkPCLRearBplate_Checked"
                                              Content="Rear form is boilerplate (no variable data)"
                                              FlowDirection="LeftToRight"
                                              IsChecked="True"
                                              Unchecked="chkPCLRearBPlate_Unchecked" />

                                    <CheckBox Name="chkPCLPrintDescText"
                                              Width="250"
                                              Height="20"
                                              Margin="200,45,0,0"
                                              HorizontalAlignment="Left"
                                              VerticalAlignment="Top"
                                              HorizontalContentAlignment="Left"
                                              Checked="chkPCLPrintDescText_Checked"
