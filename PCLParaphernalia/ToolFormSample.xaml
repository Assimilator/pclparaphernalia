                                              Height="20"
                                              Margin="200,5,0,0"
                                              HorizontalAlignment="Left"
                                              VerticalAlignment="Top"
                                              HorizontalContentAlignment="Left"
                                              Checked="chkPCLFormRemove_Checked"
