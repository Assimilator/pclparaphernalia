                                                 HorizontalAlignment="Left"
                                                 VerticalAlignment="Top"
                                                 Click="rbPCLMethodExecuteBegin_Click"
                                                 Content="Execute (@ Begin page)"
                                                 GroupName="PCLMethod" />
                                    <RadioButton Name="rbPCLMethodExecuteEnd"
                                                 Width="140"
                                                 Height="16"
                                                 Margin="10,25,0,0"
                                                 HorizontalAlignment="Left"
                                                 VerticalAlignment="Top"
                                                 Click="rbPCLMethodExecuteEnd_Click"
                                                 Content="Execute (@ End page)"
                                                 GroupName="PCLMethod" />
                                    <RadioButton Name="rbPCLMethodCallBegin"
                                                 Width="140"
                                                 Height="16"
                                                 Margin="200,5,0,0"
                                                 HorizontalAlignment="Left"
                                                 VerticalAlignment="Top"
                                                 Click="rbPCLMethodCallBegin_Click"
                                                 Content="Call (@ Begin page)"
                                                 GroupName="PCLMethod" />
                                    <RadioButton Name="rbPCLMethodCallEnd"
                                                 Width="140"
                                                 Height="16"
                                                 Margin="200,25,0,0"
                                                 HorizontalAlignment="Left"
                                                 VerticalAlignment="Top"
                                                 Click="rbPCLMethodCallEnd_Click"
                                                 Content="Call (@ End page)"
                                                 GroupName="PCLMethod" />
