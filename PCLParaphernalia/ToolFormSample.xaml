                                           Width="250"
                                           Height="25"
                                           Margin="145,55,0,0"
                                           HorizontalAlignment="Left"
                                           VerticalAlignment="Top"
                                           HorizontalContentAlignment="Left"
                                           Content="Comment" />

                                </Grid>
                            </GroupBox>

                            <GroupBox Name="grpPCLRearFormData"
                                      Width="650"
                                      Height="115"
                                      Margin="5,290,0,0"
                                      HorizontalAlignment="Left"
                                      VerticalAlignment="Top"
                                      BorderThickness="3"
                                      Header="Rear face form:">
                                <Grid>
                                    <Label Name="lbPCLMacroSrcRear"
                                           Width="60"
                                           Height="25"
                                           Margin="5,5,0,0"
                                           HorizontalAlignment="Left"
                                           VerticalAlignment="Top"
                                           HorizontalContentAlignment="Left"
                                           Content="Source:" />
                                    <RadioButton Name="rbPCLMacroSrcRearHost"
                                                 Width="220"
                                                 Height="16"
                                                 Margin="65,10,0,0"
                                                 HorizontalAlignment="Left"
                                                 VerticalAlignment="Top"
                                                 Click="rbPCLMacroSrcRearHost_Click"
                                                 Content="Download from host workstation"
                                                 GroupName="PCLMacroSrcRear" />

                                    <RadioButton Name="rbPCLMacroSrcRearPrnDisk"
                                                 Width="220"
                                                 Height="16"
                                                 Margin="300,10,0,0"
                                                 HorizontalAlignment="Left"
                                                 VerticalAlignment="Top"
                                                 Click="rbPCLMacroSrcRearPrnDisk_Click"
                                                 Content="Load from printer file storage"
                                                 GroupName="PCLMacroSrcRear" />

                                    <Label Name="lbPCLFormFileRear"
                                           Width="60"
                                           Height="25"
                                           Margin="5,30,0,0"
                                           HorizontalAlignment="Left"
                                           VerticalAlignment="Top"
                                           HorizontalContentAlignment="Left"
                                           Content="File:" />
                                    <TextBox Name="txtPCLFormFileRear"
                                             Width="475"
                                             Height="20"
                                             Margin="65,35,0,0"
                                             HorizontalAlignment="Left"
                                             VerticalAlignment="Top"
                                             VerticalContentAlignment="Bottom"
                                             FontFamily="Lucida Console"
                                             FontSize="12"
                                             LostFocus="txtPCLFormFileRear_LostFocus" />
                                    <Button Name="btnPCLFormFileRearBrowse"
                                            Width="60"
                                            Height="20"
                                            Margin="560,35,0,0"
                                            HorizontalAlignment="Left"
                                            VerticalAlignment="Top"
                                            Click="btnPCLFormFileRearBrowse_Click"
                                            Content="browse ..."
                                            Style="{StaticResource SecondaryButton}" />

                                    <Label Name="lbPCLMacroIdRear"
                                           Width="60"
                                           Height="25"
                                           Margin="5,55,0,0"
                                           HorizontalAlignment="Left"
                                           VerticalAlignment="Top"
                                           HorizontalContentAlignment="Left"
                                           Content="Macro id:" />
                                    <TextBox Name="txtPCLMacroIdRear"
                                             Width="50"
                                             Height="20"
                                             Margin="65,60,0,0"
                                             HorizontalAlignment="Left"
                                             VerticalAlignment="Top"
                                             HorizontalContentAlignment="Right"
                                             VerticalContentAlignment="Bottom"
                                             FontFamily="Lucida Console"
                                             LostFocus="txtPCLMacroIdRear_LostFocus"
                                             TextChanged="txtPCLMacroIdRear_TextChanged" />
                                    <Label Name="lbPCLMacroIdRearComment"
                                           Width="250"
                                           Height="25"
                                           Margin="145,55,0,0"
                                           HorizontalAlignment="Left"
                                           VerticalAlignment="Top"
                                           HorizontalContentAlignment="Left"
                                           Content="Comment" />
                                </Grid>
                            </GroupBox>

                        </Grid>
