                                      HorizontalAlignment="Left"
                                      VerticalAlignment="Top"
                                      BorderThickness="3"
                                      Header="Method:">
                                <Grid>
                                    <RadioButton Name="rbPCLXLMethodExecuteBegin"
                                                 Width="140"
                                                 Height="16"
                                                 Margin="10,5,0,0"
                                                 HorizontalAlignment="Left"
                                                 VerticalAlignment="Top"
                                                 Click="rbPCLXLMethodExecuteBegin_Click"
                                                 Content="Execute (@ Begin page)"
                                                 GroupName="PCLXLMethod" />
                                    <RadioButton Name="rbPCLXLMethodExecuteEnd"
                                                 Width="140"
                                                 Height="16"
                                                 Margin="10,25,0,0"
                                                 HorizontalAlignment="Left"
                                                 VerticalAlignment="Top"
                                                 Click="rbPCLXLMethodExecuteEnd_Click"
                                                 Content="Execute (@ End page)"
                                                 GroupName="PCLXLMethod" />
                                    <CheckBox Name="chkPCLXLGSPushPop"
                                              Width="225"
                                              Height="20"
                                              Margin="200,5,0,0"
