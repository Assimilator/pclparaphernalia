                                            Height="20"
                                            Margin="560,35,0,0"
                                            HorizontalAlignment="Left"
                                            VerticalAlignment="Top"
                                            Click="btnPCLFormFileMainBrowse_Click"
                                            Content="browse ..."
                                            Style="{StaticResource SecondaryButton}" />

                                    <Label Name="lbPCLMacroIdMain"
                                           Width="60"
                                           Height="25"
                                           Margin="5,55,0,0"
                                           HorizontalAlignment="Left"
                                           VerticalAlignment="Top"
                                           HorizontalContentAlignment="Left"
                                           Content="Macro id:" />
